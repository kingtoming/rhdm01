package com.axa.dm.autouw;

import java.lang.Number;

rule "ConvertRiderToHKD"
	dialect "mvel"
	when
		CurrentApplication( $currency : currency)
		ExchangeRateObject( fromCurrency == $currency , toCurrency == "HKD" , $exchangeRate : exchangeRate)
		$rider : Rider( sumInsuredHkd == null , $sumInsured : sumInsured)
	then
		modify( $rider ) {
				setSumInsuredHkd( $sumInsured.multiply($exchangeRate) )
		}
end
