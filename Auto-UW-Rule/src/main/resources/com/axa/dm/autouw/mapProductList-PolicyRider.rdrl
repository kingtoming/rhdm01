package com.axa.dm.autouw;

import java.lang.Number;

rule "mapProductList-PolicyRider"
	dialect "java"
	when
		Product( $planCode : planCode, $productType : productType, $dailyIncome : dailyIncome, $finLimitMultiplier : finLimitMultiplier, $indexation : indexation, $productSeries : productSeries, $productSeriesHigh : productSeriesHigh, $productSeriesLow : productSeriesLow, $finLimit45 : finLimit45)
		$policyRider : PolicyRider( planCode == $planCode , productType == null )
	then
		modify( $policyRider ) {
				setProductType( $productType ), 
				setDailyIncome( new BigDecimal(Double.toString($dailyIncome)) ), 
				setFinLimitMultiplier( new BigDecimal(Double.toString($finLimitMultiplier)) ), 
				setProductSeries( $productSeries ), 
				setProductSeriesHigh( $productSeriesHigh ), 
				setProductSeriesLow( $productSeriesLow ), 
				setIndexation( $indexation ), 
				setFinLimit45( new BigDecimal(Double.toString($finLimit45)) )
		}
end
