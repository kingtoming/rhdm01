package com.axa.dm.autouw;

import java.lang.Number;

rule "ConvertApplicationRiderToHKD"
	dialect "mvel"
	when
		ExchangeRateObject( $fromCurrency : fromCurrency, toCurrency == "HKD" , $exchangeRate : exchangeRate)
		$applicationRider : ApplicationRider( currency == $fromCurrency , sumInsuredHkd == null , $sumInsured : sumInsured, productType not in ( "ILAS" ) || productType == null )
	then
		modify( $applicationRider ) {
				setSumInsuredHkd( $sumInsured.multiply($exchangeRate) )
		}
end
